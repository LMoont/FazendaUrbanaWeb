@{
    ViewData["Title"] = "Cadastro e Login";
}

<!-- Formulário de Cadastro -->
<div style="width: 48%; display: inline-block; vertical-align: top;">
    <h2 class="mt-5">Cadastro</h2>
    <form id="registerForm" asp-controller="Home" asp-action="Index2" method="post" style="max-width: 400px;">
        <div class="form-group">
            <label for="registerName">Nome:</label>
            <input type="text" id="registerName" name="Nome" class="form-control" required>
        </div>
        <div class="form-group mt-3">
            <label for="registerCpfCnpj">CPF ou CNPJ:</label>
            <input type="text" id="registerCpfCnpj" name="CpfCnpj" class="form-control" required>
        </div>
        <div class="form-group mt-3">
            <label for="registerAddress">Endereço:</label>
            <input type="text" id="registerAddress" name="Endereco" class="form-control" required>
        </div>
        <div class="form-group mt-3">
            <label for="registerPhone">Telefone:</label>
            <input type="text" id="registerPhone" name="Telefone" class="form-control" required>
        </div>
        <div class="form-group mt-3">
            <label for="registerEmail">Email:</label>
            <input type="email" id="registerEmail" name="Email" class="form-control" required>
        </div>
        <div class="form-group mt-3">
            <label for="registerPassword">Senha:</label>
            <input type="password" id="registerPassword" name="Senha" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Cadastrar-se</button>
    </form>
</div>

<!-- Formulário de Login -->
<div style="width: 48%; display: inline-block; vertical-align: top;">
    <h2 class="mt-5">Login</h2>
    <form id="loginForm" asp-controller="Home" asp-action="Index2" method="post" style="max-width: 400px;">
        <div class="form-group">
            <label for="loginEmail">Email:</label>
            <input type="email" id="loginEmail" name="email" class="form-control" required>
        </div>
        <div class="form-group mt-3">
            <label for="loginPassword">Senha:</label>
            <input type="password" id="loginPassword" name="senha" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Entrar</button>
    </form>

    <!-- Mensagem de erro de login, se houver -->
    @if (ViewBag.Erro != null)
    {
        <p class="text-danger mt-3">@ViewBag.Erro</p>
    }
</div>
